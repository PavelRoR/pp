#main
	min-height calc(100vh - 147px)
	background-color: #080D1F
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	color #fff
	padding 0 0 90px
	@media screen and (max-width 560px)
		padding 0 0 60px
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 385px)
		padding 0 0 40px
.main
	&-title
		font-size: 30px
		font-weight: 900
		text-transform uppercase
		text-align center
		margin-bottom: 40px
		line-height: 120%
		@media screen and (max-width 560px)
			font-size: 24px
			margin-bottom: 30px
		@media screen and (max-width 385px)
			font-size: 22px
	&-text
		font-size: 20px
		margin-bottom: 20px
		span
			font-weight: bold
			display inline-block
		@media screen and (max-width 560px)
			font-size: 18px
	&-text-aftertext
		font-size: 22px
		margin-top: 40px
		span.spam
			background-color: yellow
			color #000
			display inline-block
			padding 0 5px
			border-radius: 5px
		@media screen and (max-width 560px)
			font-size: 20px
			margin-top: 30px
.video-wrapper-main
	width 100%
	max-width 560px
	margin 0 auto
	@media screen and (max-width 991px)
		margin-bottom: 30px