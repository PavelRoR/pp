*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: TTN
	font-weight: normal
	color #000
	background-color #fff
	line-height: 26px
.wrapper
	overflow hidden
.content
	position relative
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff;
	width: auto
	min-width 229px
	border-radius: 7px
	padding: 17px 30px
	font-size: 16px
	transition: all .4s ease
	&:focus
		text-decoration none
	&:hover
		text-decoration none
	&-yellow
		background-color: #ebfa40
		color: #000
		&:focus
			background-color #ebfa40
			color: #000
		&:hover
			background-color #ebfa40 + 40%
			color: #000
	&-blue
		background-color: #4d1c81
		color: #fff
		&:focus
			background-color #4d1c81
			color: #fff
		&:hover
			background-color #4d1c81 + 40%
			color: #fff
	&-wrapper
		&-center
			text-align center
.general-title
	margin-bottom: 50px
	font-size: 30px
	font-weight: 900
	text-transform uppercase
	color #000
	&-center
		text-align center
	&-white
		color #fff
	&-video-mobile
		display none
		@media screen and (max-width 991px)
			display block
	&-video-desktop
		@media screen and (max-width 991px)
			display none
.general-list
	li
		list-style: none
		position relative
		margin-bottom: 35px
		padding-left: 38px
		color #fff
		&:last-child
			margin-bottom: 0
		&:before
		&:after
			content: ''
			display block
			position absolute
			top 0
			left 0
			border-radius: 50px
		&:before
			background-color: #ebfa40
			width 24px
			height: 24px
		&:after
			background-color: #f530eb
			width 10px
			height 10px
			top 7px
			left 7px
	&-2
		li
			list-style none
.general-wrapper
	border-radius 10px
	padding 55px 45px 45px
	&-blue
		background-color: #152954
		border 2px dashed #fff
		box-shadow: 0 0 0 6px #152954
	&-white
		background-color #fff
		box-shadow: 0 4px 15px 5px rgba(0,0,0, .15)
	&-title
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		margin-bottom: 30px
.general-img
	position relative
	// padding-top: 100%
	img
		position absolute