*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: TTN
	font-weight: normal
	color #000
	background-color #fff
	line-height: 26px
.container
	@media screen and (min-width 2295px)
		width 1400px
.wrapper
	overflow hidden
.content
	position relative
	z-index 90
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff;
	width: auto
	min-width 229px
	border-radius: 7px
	padding: 17px 30px
	font-size: 16px
	transition: all .4s ease
	@media screen and (min-width 2295px)
		font-size: 20px
	@media screen and (max-width 560px)
		padding 17px 20px
	@media screen and (max-width 386px)
		min-width 180px
		line-height: 18px
	&:focus
		text-decoration none
	&:hover
		text-decoration none
	&-yellow
		background-color: #ebfa40
		color: #000
		&:focus
			background-color #ebfa40
			color: #000
		&:hover
			background-color #ebfa40 + 40%
			color: #000
	&-blue
		background-color: #4d1c81
		color: #fff
		&:focus
			background-color #4d1c81
			color: #fff
		&:hover
			background-color #4d1c81 + 40%
			color: #fff
	&-wrapper
		&-center
			text-align center