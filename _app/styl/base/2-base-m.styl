.general-title
	margin-bottom: 50px
	font-size: 30px
	font-weight: 900
	text-transform uppercase
	color #000
	line-height: 38px
	&-center
		text-align center
	&-white
		color #fff
	&-video-mobile
		display none
		@media screen and (max-width 991px)
			display block
	&-video-desktop
		@media screen and (max-width 991px)
			display none
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 30px
		line-height: 30px
	@media screen and (max-width 386px)
		font-size: 24px
		margin-bottom: 25px
.general-list
	li
		list-style: none
		position relative
		margin-bottom: 35px
		padding-left: 38px
		color #fff
		@media screen and (max-width 560px)
			margin-bottom: 20px
			padding-left: 28px
		&:last-child
			margin-bottom: 0
			@media screen and (max-width 991px)
				margin-bottom: 35px
			@media screen and (max-width 386px)
				margin-bottom: 20px
		&:before
		&:after
			content: ''
			display block
			position absolute
			top 0
			left 0
			border-radius: 50px
		&:before
			background-color: #ebfa40
			width 24px
			height: 24px
			@media screen and (max-width 560px)
				width 18px
				height: 18px
		&:after
			background-color: #f530eb
			width 10px
			height 10px
			top 6px
			left 6px
			@media screen and (max-width 560px)
				width 6px
				height: 6px
	&-2
		li
			list-style none
.general-wrapper
	border-radius 10px
	padding 55px 45px 45px
	@media screen and (max-width 560px)
		padding 35px 20px 20px
	&-blue
		background-color: #152954
		border 2px dashed #fff
		box-shadow: 0 0 0 6px #152954
	&-white
		background-color #fff
		box-shadow: 0 4px 15px 5px rgba(0,0,0, .15)
	&-title
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		margin-bottom: 30px
		@media screen and (max-width 560px)
			font-size: 18px
			margin-bottom: 20px
.general-img
	position relative
	// padding-top: 100%
	img
		position absolute