#last
	padding 120px 0
	background-color: #59585A
	background-image: url('../img/backs/lets.png')
	background-repeat: no-repeat
	background-position: center
	background-size cover
	text-align center
	color #fff
	@media screen and (max-width 991px)
		padding 100px 0
	@media screen and (max-width 560px)
		padding 80px 0
	@media screen and (max-width 386px)
		padding 60px 0
.last
	&-title
		font-size: 48px
		font-weight: 900
		text-transform uppercase
		line-height: 56px
		@media screen and (max-width 991px)
			font-size: 40px
		@media screen and (max-width 560px)
			font-size: 36px
			line-height: 40px
		@media screen and (max-width 386px)
			font-size: 30px
			line-height: 32px
	&-text
		font-size: 30px
		font-weight: bold
		text-transform uppercase
		margin 90px 0 100px
		line-height: 32px
		@media screen and (max-width 991px)
			font-size: 26px
			margin 50px 0 70px
		@media screen and (max-width 560px)
			font-size: 20px
			margin 30px 0 50px
		@media screen and (max-width 386px)
			font-size: 18px
			margin 20px 0 30px