.modal
	display none
	cursor auto !important
	padding 20px
	width 100%
	max-width 550px
	overflow hidden
	@media screen and (min-width 2295px)
		max-width 800px
		padding 60px 20px 100px
.fancybox-slide--html .fancybox-close-small
	color #fff
	opacity 1
	transition: all .5s ease
	outline: 0
	padding 0
	&:hover
		transform: rotate(45deg)
.form-modal
	margin 0 auto
	position relative
	z-index: 50
.modal-title
	text-align center
	font-size: 30px
	font-weight: 900
	margin: 40px 0
	color #fff
	text-transform uppercase
	@media screen and (max-width 560px)
		font-size: 26px
		margin 30px 0
.input-mail-modal
	display block
	width 100%
	max-width 380px
	margin 0 auto 20px
	float: none
.button-form-modal
	float: none
	display block
	width 100%
	max-width 380px
	margin 0 auto