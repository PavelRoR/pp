#why
	.container
		position relative
.why-bg
	position absolute
	width auto
	top 0
	left 15px
	height: 100%
.content-why
	padding 90px 0 90px 35px
	@media screen and (max-width 991px)
		padding 90px 0 0 35px
	@media screen and (max-width 560px)
		padding 60px 0 0 25px
	@media screen and (max-width 386px)
		padding 40px 0 0 25px
.general-img-why
	img
		bottom: -90px
		right 0
.why-img
	position absolute
	right 0
	bottom: 0
	@media screen and (max-width 1199px)
		right -100px
	@media screen and (max-width 991px)
		position: relative
		right 0
		z-index 10
		display block
		margin 50px auto 0
		width 100%
		max-width 446px
.button-why
	margin-top: 60px
	@media screen and (max-width 991px)
		margin-top: 20px