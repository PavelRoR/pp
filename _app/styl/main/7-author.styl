.author-info
	padding 90px 0
	background-color: #E0E5E2
	overflow hidden
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.author-pre
	font-size: 20px
	font-weight: bold
	text-transform uppercase
	color #fff
.author-about
	position relative
	margin-top: 50px
	.general-wrapper-white
		position relative
		top -70px
		left 0
		min-height 312px
		@media screen and (max-width 991px)
			width 100%
			max-width 560px
			margin 0 auto 40px
			min-height 1px
		@media screen and (max-width 560px)
			margin-bottom: 20px
.general-img-author
	img
		width 100%
		top 20px
		left 0
		@media screen and (max-width 1199px)
			top 155px
		@media screen and (max-width 991px)
			position: static
			display block
			margin 0 auto
			width 100%
			max-width 583px
	&-2
		top auto
		position relative
		bottom: -90px
		left auto
		right 0
		width 100%
		max-width 563px
		display block
		margin 0 auto
		padding 0 60px
		@media screen and (max-width 1199px)
			bottom: -235px
		@media screen and (max-width 991px)
			bottom: 0