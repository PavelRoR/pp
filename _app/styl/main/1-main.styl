#main
	padding 0 0 75px
	background-color: #080D1F
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	color #fff
	overflow hidden
	.container
		position relative
	@media screen and (max-width 991px)
		padding 0
	@media screen and (max-width 560px)
		text-align center
		padding 0 0 40px
.main
	&-pre
		font-size: 25px
		@media screen and (max-width 1199px)
			font-size: 20px
		@media screen and (max-width 560px)
			font-size: 18px
		@media screen and (max-width 386px)
			font-size: 16px
	&-title
		font-size: 40px
		margin 50px 0
		line-height: 48px
		span
			display inline-block
			font-weight: bold
		@media screen and (max-width 1199px)
			font-size: 32px
		@media screen and (max-width 560px)
			font-size: 26px
			line-height: 30px
			margin 30px 0
		@media screen and (max-width 386px)
			font-size: 24px
			margin 22px 0 45px
	&-date
		position relative
		background-color: #152954
		border-radius 10px
		padding 30px 30px 30px 50px
		width auto
		display inline-block
		&:before
		&:after
			content: ''
			display block
			position absolute
			border-radius 50px
		&:before
			background-color: #ebfa40
			width 40px
			height: 40px
			top calc(50% - 20px)
			left: -20px
		&:after
			background-color: #f530eb
			width 18px
			height: 18px
			top calc(50% - 9px)
			left -9px
		@media screen and (max-width 386px)
			padding 45px 20px 20px
			&:before
				top -20px
				left 0
				right 0
				margin 0 auto
			&:after
				top -9px
				left 0
				right 0
				margin 0 auto
		&-text
			span
				font-weight: bold
.main-img
	position absolute
	top 0
	right -300px
	z-index 0
	@media screen and (max-width 1199px)
		right -400px
		top -100px
	@media screen and (max-width 991px)
		position: static
		display block
		width 100%
		margin-bottom: -200px
.form
	&-main
		margin-top: 40px
		padding-left: 120px
		padding-right: 120px
		.col-md-7
			@media screen and (min-width 2295px)
				width 100%
				max-width 540px
		@media screen and (max-width 1199px)
			padding-left: 40px
			padding-right: 40px
		@media screen and (max-width 560px)
			padding 30px
		@media screen and (max-width 386px)
			padding 20px
	&-title
		font-size: 35px
		font-weight: 900
		text-transform uppercase
		line-height: 36px
		@media screen and (max-width 991px)
			margin-bottom: 35px
			text-align center
		@media screen and (max-width 560px)
			font-size: 26px
			margin-bottom: 30px
			line-height: 30px
.input
	background-color: transparent
	border 1px solid #e2e2e2
	border-radius 7px
	font-size: 14px
	font-weight: 100
	color #e2e2e2
	padding 16px 30px
	display inline-block
	width auto
	min-width 229px
	min-height 60px
	@media screen and (max-width 386px)
		min-width 1px
		min-height 1px
	&-mail-main
		float: left
		@media screen and (max-width 991px)
			display block
			width 100%
			max-width 380px
			margin 0 auto 20px
			float: none
.button-form-main
	float: right
	@media screen and (max-width 991px)
		float: none
		display block
		width 100%
		max-width 380px
		margin 0 auto
@-webkit-keyframes autofill
	to
		font-size: 14px
		color: #e2e2e2;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.alert-message
	clear both
	display: none;
	font-weight: bold
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	line-height: 1
	margin-bottom: -10px
.checking
	display: table;
	width 100%
	max-width 515px
	margin: 15px auto 0
	text-align: left
.checking-main
	@media screen and (max-width 991px)
		max-width 380px
	@media screen and (max-width 560px)
		margin 10px auto 0
.checking .check-label
	line-height: 24px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 28px;
	text-align: left;
	font-size: 14px
	color #e2e2e2
	@media screen and (max-width 1199px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed transparent
	color #e2e2e2
	&:focus
		border-bottom: 1px dashed transparent
		color #e2e2e2
	&:hover
		border-bottom-color: #e2e2e2
		text-decoration: none
		color #e2e2e2
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .42)
	100%
		box-shadow: 0 0 7px 7px rgba(red, .42)
.checking .check-label:before
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 17px;
	height: 17px;
	border: 1px solid red
	border-radius: 5px
	animation: pulse
	animation-duration: 1s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 5px;
	top: -10px;
	width: 7px;
	height: 12px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 1px solid #9C9C9C
	border-right: 1px solid #9C9C9C
	transform: rotate(41deg);
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #ebfa40
	animation: none
	border: 1px solid #9C9C9C;
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	transition: all 0.5s ease;
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#9C9C9C;
	opacity:1;